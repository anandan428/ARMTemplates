{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "repoBaseUrl": {
            "type": "string",
            "metadata": {
                "description": "Base URL of the repository"
            }
        },
        "apimServiceName": {
            "type": "string",
            "metadata": {
                "description" : "The name of the API Management"
            }
        },
        "publisherEmail": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The email address of the owner of the service"
            }
        },
        "publisherName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The name of the owner of the service"
            }
        },
        "sku": {
            "type": "string",
            "allowedValues": ["Developer", "Standard", "Premium"],
            "defaultValue": "Developer",
            "metadata": {
                "description": "The pricing tier of this API Management service"
            }
        },
        "skuCount": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
                "description":
                    "The instance  size of this API Management service."
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "serviceTemplate",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('repoBaseUrl'), '/service.template.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "ApimServiceName": {"value": "[parameters('apimServiceName')]" },
                    "PublisherName": {"value": "[parameters('publisherName')]" },
                    "PublisherEmail": {"value": "[parameters('publisherEmail')]" },
                    "sku": {"value": "[parameters('sku')]" },
                    "skuCount": {"value": "[parameters('skuCount')]" }
                }
            }
        }
    ],
    "outputs": {}
}